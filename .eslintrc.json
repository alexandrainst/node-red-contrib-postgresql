{
  "env": {
    "node": true,
    "es2017": true
  },
  "rules": {
    "require-jsdoc": ["error", {
      "require": {
        "FunctionDeclaration": false,
        "MethodDefinition": false,
        "ClassDeclaration": false,
        "ArrowFunctionExpression": false
      }
    }],
    "comma-dangle": ["warn", "only-multiline"],
    "max-len":  ["warn", 120],
    "object-curly-spacing": ["warn", "always"],
    "space-before-function-paren": ["warn", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "new-cap": "warn"
  }
}
